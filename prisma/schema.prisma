generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model BlogPost {
  id              String   @id @default(cuid())
  title           String
  slug            String   @unique
  excerpt         String?
  contentMarkdown String
  tags            String[] @default([])
  metaTitle       String?
  metaDescription String?
  coverPrompt     String?
  author          String?
  status          BlogStatus @default(DRAFT)
  signature       String?  @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([createdAt])
  @@index([status])
}

enum BlogStatus {
  DRAFT
  PUBLISHED
}